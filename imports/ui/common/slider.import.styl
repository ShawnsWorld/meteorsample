
.slider
  width 100%
  height 1em
  position relative
  background #10171D
  border-radius 2em
  box-shadow inset 0px 0px 1px 1px rgba(0, 0, 0, 0.9), 0px 1px 1px 0px rgba(255, 255, 255, 0.13)
  .bar
    width 100%
    height 0.4em
    background #333
    position relative
    top 0.3em
    border-radius 2em
    background #1d2e38
    background linear-gradient(left, #1d2e38 0%, #2b4254 50%, #2b4254 100%)
    appearance none
  .highlight
    height 2px
    position absolute
    width 100%
    top calc(0.5em -1px)
    border-radius 2em
    background rgba(255, 255, 255, 0.25)
  input[type="range"]::-webkit-slider-thumb
    appearance none
    position relative
    top 0px
    z-index 1
    width 0.8em
    height 0.8em
    cursor pointer
    box-shadow 0px 6px 5px 0px rgba(0, 0, 0, 0.6)
    border-radius 2em
    background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #ebf1f6), color-stop(50%, #abd3ee), color-stop(51%, #89c3eb), color-stop(100%, #d5ebfb))
  input[type="range"]:hover ~ .rangevalue,
  input[type="range"]:active ~ .rangevalue {
    opacity: 1;
    top: -75px;
  }
/* Tool Tip */

  .rangevalue
    color: white;
    font-size: 1em;
    text-align: center;
    display: block;
    margin: 20px 0;
    position: relative;
    left: 44.5%;
    padding: 6px 12px;
    border: 1px solid black;
    box-shadow: inset 0px 1px 1px 0px rgba(255, 255, 255, 0.2), 0px 2px 4px 0px rgba(0, 0, 0, 0.4);
    background: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #222931), color-stop(100%, #181D21));
    border-radius: 20px;
    width: 18px;
    opacity: 0;
    transition: all 0.5s ease;
    top: -95px;


.slider
  display: inline-block;
  height 1em
  line-height 1em
  .main
    display: inline-block;
    height 1em
    position relative
    background #10171D
    border-radius 2em
    box-shadow inset 0px 0px 1px 1px rgba(0, 0, 0, 0.9), 0px 1px 1px 0px rgba(255, 255, 255, 0.13)
    top -0.3em
    .bar
      left 6px
      width calc(100% - 12px)
      height 0.4em
      background #333
      position relative
      top 0.3em
      border-radius 2em
      background #1d2e38
      background linear-gradient(left, #1d2e38 0%, #2b4254 50%, #2b4254 100%)
      appearance none
    .highlight
      height 2px
      left 6px
      position absolute
      width calc(100% - 12px)
      top calc(0.5em -1px)
      border-radius 2em
      background rgba(255, 255, 255, 0.25)
    input[type="range"]::-webkit-slider-thumb
      appearance none
      position relative
      top 0px
      width 0.8em
      height 0.8em
      cursor pointer
      box-shadow 0px 6px 5px 0px rgba(0, 0, 0, 0.6)
      border-radius 2em
      background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #ebf1f6), color-stop(50%, #abd3ee), color-stop(51%, #89c3eb), color-stop(100%, #d5ebfb))
      z-index 1
  .indicator
    display: inline-block;
    position: relative;
    color: #fff;
    text-align: center;
    border-radius: 1em;
    background: #2c3e50;
    padding: 0.1em;
    font-size:0.8em
    height 100%
    box-shadow: inset 0px 0px 1px 1px rgba(0, 0, 0, 0.9), 0px 1px 1px 0px rgba(255, 255, 255, 0.13);
